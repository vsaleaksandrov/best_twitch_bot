<section id="header" class="pure-g">
    <div class="pure-u-1-3"></div>

    <div class="pure-u-1-3">
        <div class="nes-container with-title">
            <p class="title">Текущая игра</p>
        </div>
    </div>

    <div class="pure-u-1-3"></div>
</section>

<section id="content" class="pure-g">
    <div class="pure-u-1">
        <div class="nes-container with-title">
            <p class="title">{{intro_text}}</p>
            <table class="nes-table nes-table-responsive is-bordered is-centered">
                <thead>
                    <tr>
                        <th>Имя на Twitch</th>
                        <th>Результат игры <span class="nes-text is-warning">1:3</span></th>
                        <th>Фарм <span class="nes-text is-warning">1:3</span></th>
                        <th>КДА <span class="nes-text is-warning">2:3</span></th>
                    </tr>
                </thead>
                <tbody>
                {{#each users}}
                    <tr>
                        <td>
                            <a href="/{{this.name}}" class="nes-btn is-primary">
                                {{this.name}}
                            </a>
                        </td>
                        <td>
                            <span class="nes-text is-error">Луз</span>: <span class="nes-text is-primary">10000</span>
                        </td>
                        <td>
                            <span class="nes-text is-success">< 100</span>: <span class="nes-text is-primary">10000</span>
                        </td>
                        <td>
                            <span class="nes-text is-success">1.9</span>: <span class="nes-text is-primary">2000</span>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</section>